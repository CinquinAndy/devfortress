{
	"name": "odcaf-mcp-server",
	"version": "1.0.0",
	"description": "MCP Server for ChatGPT - Canadian Cultural Facilities (ODCAF) data integration",
	"main": "dist/index.js",
	"type": "module",
	"scripts": {
		"dev": "bun --watch src/index.ts",
		"dev:ngrok": "bash scripts/dev-with-ngrok.sh",
		"dev:ngrok:ts": "bun scripts/dev-with-ngrok.ts",
		"build": "bun run build:server && bun run build:widget",
		"build:server": "bun build src/index.ts --outdir dist --target node",
		"build:widget": "cd web && bun install && bun run build",
		"start": "bun dist/index.js",
		"lint": "biome check",
		"format": "biome format --write",
		"check": "biome check . --write",
		"typecheck": "tsc --noEmit"
	},
	"keywords": [
		"mcp",
		"chatgpt",
		"odcaf",
		"cultural-facilities",
		"canada"
	],
	"author": "",
	"license": "MIT",
	"packageManager": "bun@1.3.6",
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.12.0",
		"express": "^4.21.0",
		"zod": "^3.24.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.13",
		"@types/bun": "^1.2.0",
		"@types/express": "^5.0.0",
		"@types/node": "^22.10.0",
		"typescript": "^5.7.0"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
